<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/teal_200"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <EditText
        android:id="@+id/f_name"
        android:layout_width="match_parent"
       android:paddingStart="10dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"

        android:layout_marginRight="5dp"
        android:inputType="textCapWords"
        android:background="@drawable/text_roundshap"
        android:layout_marginLeft="10dp"
        android:hint="FirstName"
        android:padding="5dp"
        ></EditText>
        <EditText
            android:id="@+id/l_name"
            android:layout_width="match_parent"
            android:inputType="textCapWords"
            android:background="@drawable/text_roundshap"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"

            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:hint="LastName"
            android:layout_below="@+id/f_name"
            android:padding="5dp"
            ></EditText>

        <com.hbb20.CountryCodePicker
            android:id="@+id/countyCodePicker"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/l_name"

            android:layout_marginTop="10dp"
            android:background="@drawable/text_roundshap"
            android:paddingTop="10dp" />

        <EditText
            android:id="@+id/mo_no"
            android:layout_width="match_parent"
            android:textColorHint="@color/black"
            android:background="@drawable/text_roundshap"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:paddingTop="9dp"

            android:layout_marginTop="10dp"
            android:inputType="number"
            android:paddingStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/l_name"
            android:layout_marginLeft="110dp"
            android:hint="Mobile number"

            ></EditText>
        <com.hbb20.CountryCodePicker
            android:id="@+id/countyCodePicker2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/countyCodePicker"

            android:layout_marginTop="10dp"
            android:background="@drawable/text_roundshap"
            android:paddingTop="10dp" />

        <EditText
            android:id="@+id/Alter_no"
            android:layout_width="match_parent"
            android:textColorHint="@color/black"
            android:background="@drawable/text_roundshap"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:paddingTop="9dp"

            android:layout_marginTop="10dp"
            android:inputType="number"
            android:paddingStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/mo_no"
            android:layout_marginLeft="110dp"
            android:hint="Mobile number"

            ></EditText>


        <EditText
            android:id="@+id/email_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="@color/black"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"

            android:layout_marginRight="5dp"
            android:background="@drawable/text_roundshap"
            android:layout_below="@id/Alter_no"
            android:layout_marginLeft="5dp"
            android:inputType="textEmailAddress"
            android:hint="E-mail"
            android:padding="5dp"
            ></EditText>
        <TextView
            android:id="@+id/gender_id"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Gender"
            android:paddingStart="10dp"
           android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:paddingTop="15dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/email_id"
            ></TextView>
        <RadioGroup
            android:layout_width="match_parent"
            android:id="@+id/rd_group"
            android:layout_height="match_parent"
            android:layout_below="@+id/gender_id">

            <RadioButton
                android:id="@+id/rd_male"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:buttonTint="@color/purple_200"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Male"
                >

            </RadioButton>
            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:buttonTint="@color/purple_200"
                android:layout_height="match_parent"
                android:text="Female"
                android:textStyle="bold"
                >

            </RadioButton>
            <RadioButton
                android:textStyle="bold"
                android:id="@+id/rb_t_gender"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:buttonTint="@color/purple_200"
                android:layout_height="match_parent"
                android:text="TransGender"
                >

            </RadioButton>
        </RadioGroup>

        <TextView
            android:id="@+id/hobbiese_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/rd_group"
            android:text="Hobbies"
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"

            ></TextView>
        <RadioGroup
            android:id="@+id/rd_group2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/hobbiese_1">
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:id="@+id/cb_progr"
                android:textStyle="bold"
                android:buttonTint="@color/purple_200"
                android:text="Programming">

            </CheckBox>
           <CheckBox
               android:layout_width="match_parent"
               android:buttonTint="@color/purple_200"
               android:layout_height="match_parent"
               android:id="@+id/cb_nobal"
               android:textStyle="bold"
               android:layout_marginLeft="20dp"
               android:text="Study Nobel">

           </CheckBox>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:buttonTint="@color/purple_200"
                android:id="@+id/cb_movie"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:text="Watching movie">

            </CheckBox>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cb_gaming"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:buttonTint="@color/purple_200"
                android:text="Gaming">

            </CheckBox>


            <CheckBox
                android:layout_width="match_parent"
                android:buttonTint="@color/purple_200"
                android:layout_height="match_parent"

                android:textStyle="bold"
                android:id="@+id/travling"
                android:layout_marginLeft="20dp"
                android:text="Trabling">

            </CheckBox>


        </RadioGroup>
        <Button
            android:id="@+id/sub_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/rd_group2"
            android:background="@drawable/text_roundshap"
            android:layout_centerHorizontal="true"
            android:text="Submit">

        </Button>

        <TextView
            android:id="@+id/text_fname"
            android:layout_below="@+id/sub_button"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_roundshap"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"></TextView>
        <TextView
            android:id="@+id/text_lname"
            android:layout_below="@+id/text_fname"
            android:background="@drawable/text_roundshap"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"></TextView>
        <TextView
            android:id="@+id/text_mo_no"
            android:layout_below="@+id/text_lname"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_roundshap"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"></TextView>
        <TextView
            android:id="@+id/text_Al_mo_no"
            android:layout_below="@+id/text_mo_no"
            android:background="@drawable/text_roundshap"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"></TextView>
        <TextView
            android:id="@+id/text_email"
            android:layout_below="@+id/text_Al_mo_no"
            android:background="@drawable/text_roundshap"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"></TextView>
        <TextView
            android:id="@+id/text_gender"
            android:layout_below="@+id/text_email"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_roundshap"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"></TextView>



    </RelativeLayout>


</ScrollView>
